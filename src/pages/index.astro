---
import BasicLayout from '@/layouts/BasicLayout.astro';
import Map from '@/components/MapWithAllTrips.astro';
---

<BasicLayout >
	<link slot="custom-header-scripts" rel="stylesheet" href="/lite-youtube/lite-yt-embed.css" />
	<script slot="custom-header-scripts" is:inline src="/lite-youtube/lite-yt-embed.js"></script>

	<article>
		<h1>Portfolio</h1>
		<lite-youtube videoid="xemu1IOIFnw" playlabel="Introduction to myself"></lite-youtube>
		<Map/>
	</article>
</BasicLayout>

<style>
	article {
		padding: 1rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
	lite-youtube {
		width: 600px;
		margin: 2rem 0;
		border-radius: 10px;
	}
</style>