<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-dark.png" media="(prefers-color-scheme: dark)" />

<!-- Web manifest -->
<link rel="manifest" href="/site.webmanifest" />

<!-- Safari pinned tab -->
<link rel="mask-icon" href="/safari-pinned-tab-light.svg" color="#5bbad5" media="(prefers-color-scheme: light)" />
<link rel="mask-icon" href="/safari-pinned-tab-dark.svg" color="#ffffff" media="(prefers-color-scheme: dark)" />

<!-- Microsoft application tile -->
<meta name="msapplication-TileColor" content="#da532c" />

<!-- Set color for mobile bars -->
<meta name="theme-color" content="#000000" />

<!-- Browserconfig (default) -->
<script>
	const darkScheme = window.matchMedia("(prefers-color-scheme: dark)").matches;
	const browserConfigLink = document.createElement("link");
	browserConfigLink.rel = "browserconfig";
	browserConfigLink.href = darkScheme ? "/browserconfig-dark.xml" : "/browserconfig-light.xml";
	document.head.appendChild(browserConfigLink);
</script>
