---
import RadialProgressBar from "./RadialProgressBar.astro";

const { text, number, subText } = Astro.props;
---

<div class="w-56 flex flex-col gap-8">
  <div class="flex flex-col items-center gap-4">
    <RadialProgressBar />
    <p class="text-green-300 uppercase text-lg font-bold">{text}</p>
  </div>
  <div class="text-base flex flex-col items-center gap-2">
    <div class="w-auto text-5xl">{number}</div>
    <div class="w-full text-xl text-center text-wrap">
      {subText}
    </div>
  </div>
</div>
