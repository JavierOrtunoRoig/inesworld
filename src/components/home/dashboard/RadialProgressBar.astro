---
const { text } = Astro.props;
---

<div
	class="radial-progress text-green-400"
	style="--value: 0; --size: 13rem; --thickness: 0.75rem;"
	role="progressbar"
	aria-valuemin="0"
	aria-valuemax="100"
	aria-label={text}
>
	<p class="text-center text-lg font-bold uppercase text-green-300">{text}</p>
</div>

<style>
	p {
		--progress-bar-thickness: 0.75rem;
		padding: 0 var(--progress-bar-thickness);
	}
</style>
