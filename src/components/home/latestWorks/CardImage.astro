---
const { text } = Astro.props;

const src = `/trips/${text.toLowerCase()}/1.webp`;
const url = `/trip/${text.toLowerCase()}`;
---

<a
  class="fade-up w-full flex justify-center sm:w-96 transition-transform hover:cursor-pointer hover:scale-105"
  href={url}
>
  <div class="card shadow image-full before:opacity-15">
    <figure>
      <img src={src} alt="Indonesia" />
    </figure>
    <div class="card-body">
      <h2 class="title text-2xl sm:text-4xl text-white">{text}</h2>
    </div>
  </div>
</a>

<style>
  div.card::before {
    opacity: 0.3;
  }
</style>

<!-- Script to add fade up animation -->
<script>
  import {
    createIntersectionObserver,
    observeAll,
  } from "@/helpers/IntersectionObserver.js";

  const runAnimation = () => {
    const fadeUpObserver = createIntersectionObserver();
    observeAll(fadeUpObserver, ".fade-up");
  };

  document.addEventListener("astro:page-load", runAnimation);
</script>
