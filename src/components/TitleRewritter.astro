---
const { texts } = Astro.props;
---

<p
  class="typewrite text-5xl md:text-6xl"
  data-period="2000"
  data-type=`${JSON.stringify(texts)}`
>
  <span class="wrap"></span>
  <span class="tick"></span>
</p>

<style>
  @keyframes caret {
    50% {
      border-color: transparent;
    }
  }

  .typewrite span.tick {
    border-right: 0.08em solid #fff;
    animation: caret 1s steps(1) infinite;
  }
</style>

<script>
  var TxtType = function (el, toRotate, period) {
    this.toRotate = toRotate;
    this.el = el;
    this.loopNum = 0;
    this.period = parseInt(period, 10) || 2000;
    this.txt = "";
    this.tick();
    this.isDeleting = false;
  };

  TxtType.prototype.tick = function () {
    var i = this.loopNum % this.toRotate.length;
    var fullTxt = this.toRotate[i];

    if (this.isDeleting) {
      this.txt = fullTxt.substring(0, this.txt.length - 1);
    } else {
      this.txt = fullTxt.substring(0, this.txt.length + 1);
    }

    if (document.querySelector(".typewrite > .wrap")) {
      const wrap = document.querySelector(".typewrite > .wrap");
      if (wrap?.parentNode === this.el) {
        this?.el?.removeChild(wrap);
      }
    }

    const wrap = document.createElement("span");
    wrap.classList.add("wrap");
    wrap.textContent = this.txt;
    // apend child at the beginning of the element
    this.el.insertBefore(wrap, this.el.firstChild);

    var that = this;
    var delta = 200 - Math.random() * 100;

    if (this.isDeleting) {
      delta /= 2;
    }

    if (!this.isDeleting && this.txt === fullTxt) {
      delta = this.period;
      this.isDeleting = true;
    } else if (this.isDeleting && this.txt === "") {
      this.isDeleting = false;
      this.loopNum++;
      delta = 500;
    }

    setTimeout(function () {
      that.tick();
    }, delta);
  };
  const loadScript = () => {
    var elements = document.getElementsByClassName("typewrite");
    for (var i = 0; i < elements.length; i++) {
      var toRotate = elements[i].getAttribute("data-type");
      var period = elements[i].getAttribute("data-period");
      if (toRotate) {
        new TxtType(elements[i], JSON.parse(toRotate), period);
      }
    }
  };

  document.addEventListener("astro:page-load", loadScript);
</script>
