---
import Instagram from "@/icons/Instagram.astro";
import Youtube from "@/icons/Youtube.astro";
---

<nav>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/blog">Blog</a></li>
    <li><a href="/biblioteca">Biblioteca</a></li>
    <li><a href="/contact">Contact</a></li>
    <li>
      <ul class="icon-list">
        <li class="item instagram">
          <a
            href="https://www.instagram.com/inesworld.mov/"
            aria-label="See my instagram account"
          >
            <Instagram class={"icon"} />
          </a>
        </li>
        <li class="item youtube">
          <a href="#" aria-label="See my youtube channel">
            <Youtube class={"icon"} />
          </a>
        </li>
      </ul>
    </li>
  </ul>
</nav>

<style>
  nav {
    position: relative;
    font-size: 1.3rem;
    height: var(--header-height);
    display: flex;
    justify-content: center;
    top: 1rem;
    z-index: 2;

    @media (max-width: 500px) {
      top: 0;
    }

    > ul {
      width: fit-content;
      display: flex;
      gap: 1.5rem;
      align-items: center;
      list-style: none;
      margin: 0;
      padding: 15px;
      background-color: var(--secondary-color);
      border-radius: 1rem;

      > li:not(:last-child):hover {
        transition: 0.5s ease;
        transform: scale(1.1);
      }

      li > a {
        text-decoration: none;
        color: var(--quinary-color);
      }
    }
  }

  @media (max-width: 500px) {
    nav {
      margin-top: 0;
      height: auto;

      > ul {
        width: 100%;
        border-radius: 0;
        flex-direction: column;

        > li {
          width: 100%;
          display: flex;
          justify-content: center;
        }
      }
    }
  }
</style>

<style is:global>
  ul.icon-list {
    padding: 0rem;
    display: flex;
    gap: 5px;
    list-style-type: none;
  }
  .item {
    .icon {
      font-size: 1.1rem;
      color: #fff;
      fill: #fff;
      transition: 0.5s ease;
      z-index: 2;
    }

    a {
      text-decoration: none;
      width: 32px;
      height: 32px;
      /* background-color: #f0f9fe; */
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      z-index: 1;
      /* border: 3px solid #f0f9fe; */
      overflow: hidden;
    }

    a::before {
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      background: var(--bg-color);
      z-index: 0;
      scale: 1 0;
      transform-origin: bottom;
      transition: scale 0.5s ease;
    }

    &:hover a::before {
      scale: 1 1;
    }

    a:hover .icon {
      transform: rotateY(360deg);
    }

    &.instagram {
      --bg-color: linear-gradient(to bottom right, #f9ce34, #ee2a7b, #6228d7);
    }
    &.linkedin {
      --bg-color: #0077b5;
    }
    &.youtube {
      --bg-color: #ff0000;
    }
    &.x {
      --bg-color: #000;
    }
  }
</style>
