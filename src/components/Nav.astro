---
import Instagram from "@/icons/Instagram.astro";
import Youtube from "@/icons/Youtube.astro";
---

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
/>

<nav>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/blog">Blog</a></li>
    <li>
      <ul class="icon-list">
        <li class="item instagram">
          <a href="https://www.instagram.com/inesworld.mov/">
            <Instagram class={"icon"} />
          </a>
        </li>
        <li class="item youtube">
          <a href="#">
            <Youtube class={"icon"} />
          </a>
        </li>
      </ul>
    </li>
  </ul>
</nav>

<style>
  ul {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: 1rem;
    background: #eee;
    list-style: none;
    margin: 0;
  }

  ul.icon-list {
    padding: 0rem;
    display: flex;
    gap: 5px;
  }

  ul a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
  }
</style>

<style is:global>
  .item {
    .icon {
      font-size: 1.5rem;
      color: hsl(203, 92%, 8%);
      fill: hsl(203, 92%, 8%);
      transition: 0.5s ease;
      z-index: 2;
    }

    a {
      text-decoration: none;
      width: 48px;
      height: 48px;
      background-color: #f0f9fe;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      z-index: 1;
      border: 3px solid #f0f9fe;
      overflow: hidden;
    }

    a::before {
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      background: var(--bg-color);
      z-index: 0;
      scale: 1 0;
      transform-origin: bottom;
      transition: scale 0.5s ease;
    }

    &:hover a::before {
      scale: 1 1;
    }

    a:hover .icon {
      color: #fff;
      fill: #fff;
      transform: rotateY(360deg);
    }

    &.instagram {
      --bg-color: linear-gradient(to bottom right, #f9ce34, #ee2a7b, #6228d7);
    }
    &.linkedin {
      --bg-color: #0077b5;
    }
    &.youtube {
      --bg-color: #ff0000;
    }
    &.x {
      --bg-color: #000;
    }
  }
</style>
