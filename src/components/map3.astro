---
import Layout from "../layouts/BasicLayout.astro";
const { origin, destination } = Astro.props;
---

<!-- Styles -->
<style>
  #chartdiv {
    width: 100%;
    height: 500px;
  }
</style>

<!-- Chart code -->
<script type="module" data-origin={origin} data-destination={destination}>
  import { main } from '/public/maps/mapWithNextTrip.js';
  const o = document.scripts[0].dataset.origin;
  const d = document.scripts[0].dataset.destination;
  main(o, d)
</script>

<!-- HTML -->
<Layout>
  <script slot="custom-header-scripts" src="https://cdn.amcharts.com/lib/5/index.js"></script>
  <script slot="custom-header-scripts" src="https://cdn.amcharts.com/lib/5/map.js"></script>
  <!-- <script slot="custom-header-scripts" src="https://cdn.amcharts.com/lib/5/geodata/worldLow.js"></script> -->
  <script slot="custom-header-scripts" src="https://cdn.amcharts.com/lib/5/geodata/worldHigh.js"></script>
  <!-- <script slot="custom-header-scripts" src="https://cdn.amcharts.com/lib/5/geodata/worldUltra.js"></script> -->
  <script slot="custom-header-scripts" src="https://cdn.amcharts.com/lib/5/themes/Animated.js"></script>

  <div id="chartdiv"></div>
</Layout>
